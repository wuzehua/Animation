<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PropertyAnimationActivity"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_marginTop="20dp"
    >
        <com.dingmouren.paletteimageview.PaletteImageView
                android:id="@+id/paletteView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:paletteShadowRadius="10dp"
                app:palettePadding="20dp"
                app:paletteRadius="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="50dp"
        />
    </LinearLayout>

    <com.deadline.statebutton.StateButton
            android:id="@+id/sb_alphaButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:text="Alpha"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="false"

            app:round="true"
            app:radius="10dp"
            app:animationDuration="200"

            app:normalStrokeWidth="2dp"
            app:pressedStrokeWidth="2dp"
            app:unableStrokeWidth="2dp"

            app:normalStrokeColor="@android:color/black"
            app:pressedStrokeColor="@android:color/black"
            app:unableStrokeColor="@android:color/darker_gray"

            app:normalTextColor="@android:color/black"
            app:pressedTextColor="@android:color/white"
            app:unableTextColor="@android:color/darker_gray"

            app:normalBackgroundColor="@android:color/transparent"
            app:pressedBackgroundColor="@android:color/black"
            app:unableBackgroundColor="@android:color/transparent"
    />

    <com.deadline.statebutton.StateButton
            android:id="@+id/sb_scaleButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:text="Scale"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="false"

            app:round="true"
            app:radius="10dp"
            app:animationDuration="200"

            app:normalStrokeWidth="2dp"
            app:pressedStrokeWidth="2dp"
            app:unableStrokeWidth="2dp"

            app:normalStrokeColor="@android:color/black"
            app:pressedStrokeColor="@android:color/black"
            app:unableStrokeColor="@android:color/darker_gray"

            app:normalTextColor="@android:color/black"
            app:pressedTextColor="@android:color/white"
            app:unableTextColor="@android:color/darker_gray"

            app:normalBackgroundColor="@android:color/transparent"
            app:pressedBackgroundColor="@android:color/black"
            app:unableBackgroundColor="@android:color/transparent"
    />

    <com.deadline.statebutton.StateButton
            android:id="@+id/sb_mixButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:text="Alpha+Scale"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="false"

            app:round="true"
            app:radius="10dp"
            app:animationDuration="200"

            app:normalStrokeWidth="2dp"
            app:pressedStrokeWidth="2dp"
            app:unableStrokeWidth="2dp"

            app:normalStrokeColor="@android:color/black"
            app:pressedStrokeColor="@android:color/black"
            app:unableStrokeColor="@android:color/darker_gray"

            app:normalTextColor="@android:color/black"
            app:pressedTextColor="@android:color/white"
            app:unableTextColor="@android:color/darker_gray"

            app:normalBackgroundColor="@android:color/transparent"
            app:pressedBackgroundColor="@android:color/black"
            app:unableBackgroundColor="@android:color/transparent"
    />


</LinearLayout>