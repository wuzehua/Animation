<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="48dp"
                      android:orientation="horizontal">

            <TextView android:id="@+id/tv_positionTextCard"
                      android:layout_width="wrap_content"
                      android:gravity="center_vertical"
                      android:paddingRight="5dp"
                      android:layout_height="48dp"
                      android:textSize="15sp"
                      android:textStyle="italic"
                      android:paddingLeft="5dp"
            />


            <TextView android:id="@+id/tv_titleTextCard"
                      android:layout_width="wrap_content"
                      android:layout_height="48dp"
                      android:paddingRight="5dp"
                      android:gravity="center_vertical"
                      android:textColor="@color/titleColor"
                      android:textSize="15sp"
            />


            <TextView android:id="@+id/tv_typeTextCard"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/titleColor"
                      android:textSize="12sp"
                      android:layout_gravity="center_vertical"
            />



            <TextView android:id="@+id/tv_hotNumberCard"
                      android:layout_width="0dp"
                      android:layout_height="48dp"
                      android:layout_weight="1"
                      android:textSize="13sp"
                      android:textColor="@color/hotNumColor"
                      android:gravity="center_vertical"
                      android:paddingRight="5dp"
            />

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    app:lottie_fileName="favourite.json"
            />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>